module hello_world;

class Greeter {
	string helloGreeting;
	
	new() {
		helloGreeting = "hello";
	}
	
	new(string helloGreeting_) {
		helloGreeting = helloGreeting_;
	}

	void sayHelloTo(string receiver) {
		print helloGreeting + " " + receiver + "\n";
	}
}

// very simple hello world example
void main() {
	Greeter greeter;
	
	greeter = new Greeter();
	greeter.sayHelloTo("world");
}