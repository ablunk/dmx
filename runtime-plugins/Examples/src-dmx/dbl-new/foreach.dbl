#import "../dbl"
#import "../stdlib"

module foreach {

extension ForEach {
	Statement -> ForEach;
	ForEach -> "foreach" "(" elementVariable:Variable "in" collection:Expression ")" body:LocalScopeStatement;
}
semantics {
	expand "
		Iterator it = "collection".iterator();
		while (it.hasNext()) {
			Object object = it.next();
			"elementVariable" = object as "elementVariable.getClassifierType()";
			"body"
		}
	";
}

}