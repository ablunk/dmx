#import "../base"

module unless {

	extension UnlessA {
		Statement -> UnlessA;
		UnlessA -> "@UnlessA@" "unless" "(" condition : Expression ")" codeBlock : CodeBlock;
	}
	semantics {
		gen "if (!(" condition ")) " codeBlock "";
	}

	extension UnlessB {
		Statement -> UnlessB;
		UnlessB -> "@UnlessB@" "unless" "(" condition : Expression ")" codeBlock : CodeBlock;
	}
	semantics {
		gen "if (!(" condition ")) " codeBlock "";
	}

}