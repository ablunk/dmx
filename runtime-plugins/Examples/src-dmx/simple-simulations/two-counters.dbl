module twocounters;

boolean debug = true;
int limit = 10;

void main() {
	activate new Counter();
	activate new Counter();
	advance limit + 1;
}

active class Counter {
	int count = 0;
	
	actions {
		while (count <= limit) {
			trace("count = " + count);
			advance 1;
			count = count + 1;
		}
		trace("Finished.");
	}
}

void trace(string msg) {
	if (debug) {
		print time , ": " , msg , "\n";
	}
}