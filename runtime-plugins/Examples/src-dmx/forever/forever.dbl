#import "../dbl"

module ForeverExtension {

	extension Forever {
		Statement -> Forever;
		Forever -> "forever" "{" ManyStatements "}";
		ManyStatements -> ;
		ManyStatements -> statements : list(Statement) ManyStatements;
	}
	semantics {
		gen "while (true) {";
		
		ListIterator it = statements;
		while (it.hasNext()) {
			Statement stm = it.next() as Statement;
			gen "" stm "";
		}

		gen "}";
	}

}